FROM jenkins/inbound-agent:jdk17
USER root
RUN apt-get update && apt-get install -y \
    python3 python3-pip python3-venv \
    git awscli curl nano \
    && curl -fsSL https://get.docker.com -o get-docker.sh \
    && sh get-docker.sh \
    && rm get-docker.sh
RUN usermod -aG docker jenkins

USER jenkins
